# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# TypeScript/JavaScript
[*.{ts,js,tsx,jsx}]
indent_size = 2
max_line_length = 100

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# TOML
[*.toml]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2
