# Solana Configuration
SOLANA_NETWORK=devnet
ANCHOR_PROVIDER_URL=https://api.devnet.solana.com
ANCHOR_WALLET=~/.config/solana/id.json

# Program Configuration
PROGRAM_ID=DoNaT1on111111111111111111111111111111111111

# Admin Configuration
ADMIN_KEYPAIR_PATH=./keypairs/admin.json

# Donation Limits (in lamports)
MIN_DONATION_AMOUNT=1000000
MAX_DONATION_AMOUNT=100000000000

# RPC Configuration
RPC_URL=https://api.devnet.solana.com
WS_URL=wss://api.devnet.solana.com

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info

# Testing
TEST_VALIDATOR=false
SKIP_PREFLIGHT=false

# API Keys (if using private RPC)
# HELIUS_API_KEY=your_key_here
# QUICKNODE_URL=your_url_here
# ALCHEMY_URL=your_url_here

# Database (for off-chain tracking)
# DATABASE_URL=postgresql://user:password@localhost:5432/donations

# Notifications
# DISCORD_WEBHOOK_URL=
# TELEGRAM_BOT_TOKEN=
# SLACK_WEBHOOK_URL=

# Security
REQUIRE_CONFIRMATION=true
MAX_RETRIES=3

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_EVENTS=true
